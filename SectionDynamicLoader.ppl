import PTNUI:Dynamic:DynamicLoader;
import PTNUI:Model:LandingPageTab;
import PTNUI:Model:LandingPageSection;
import PTNUI:Model:Tile;

class <NameOfLoaderClass> extends PTNUI:Dynamic:DynamicLoader;
   method <NameOfLoaderClass>(&oTab As PTNUI:Model:LandingPageTab, &oSection As PTNUI:Model:LandingPageSection);
   method LoadSection();
end-class;

method <NameOfLoaderClass>
   /+ &oTab as PTNUI:Model:LandingPageTab, +/
   /+ &oSection as PTNUI:Model:LandingPageSection +/
   REM ** Use the &oTab and &oSection variables to add style classes, style sheets, or read attributes associated with the parent tab and dynamic section;
   %Super = create PTNUI:Dynamic:DynamicLoader(&oTab, &oSection);
end-method;

method LoadSection
   /+ Extends/implements PTNUI:Dynamic:DynamicLoader.LoadSection +/
   Local PTNUI:Model:Tile &oTile;
   REM ** Additional vars declared here;
   REM ** set the following two variables from data within your dataset;
   REM ** &tileLabel: rendered on the face of the tile as the tile's title;
   Local string &tileLabel;
   REM ** &targetUrl: Where to go when a user clicks a tile;
   Local string &targetUrl;
   
   REM ** iterate over data set;
   While ...
      
      &oTile = %This.CreateTileUsingTab("", &tileLabel);
      &oTile.RowNum = %This.GetNextRowNumber();
      REM ** If all rows have the same image, then the image is noise. Prefer a dynamic image;
      &oTile.GltImageName = Image.<IMAGE_NAME_HERE>;
      REM ** Use the following 2 lines for text-only, non-clickable tiles;
      REM &oTile.IsNotTile = True;
      REM &oTile.IsHotspotEnabled = False;

      REM ** Choose one of the following as they are mutually exclusive (classic or fluid, not both);
      REM ** For Classic;
      %This.SetupClassicTarget(&oTile, &targetUrl);
      REM ** or Fluid;
      %This.SetupFluidTarget(&oTile, &targetUrl);

      %This.AddTileToSection(&oTile);
   End-While;
end-method;
